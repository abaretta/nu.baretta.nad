			"settings": [{
					"type": "group",
					"label": {
						"en": "General settings",
						"nl": "Algemene instellingen"
					},
					"children": [{
						"id": "settingIPAddress",
						"type": "text",
						"pattern": "^(([01]?\\d\\d?|2[0-4]\\d|25[0-5]).){3}([01]?\\d\\d?|2[0-4]\\d|25[0-5])$",
						"label": {
							"en": "IP address",
							"nl": "IP adres"
						},
						"value": "0.0.0.0"
					}]
				},
				{
					"type": "group",
					"collapsed": "true",
					"label": {
						"en": "Optional connection setting",
						"nl": "Optionele verbindingsinstelling"
					},
					"children": [{
						"id": "stayConnected",
						"type": "checkbox",
						"value": false,
						"label": {
							"en": "Stay connected (optional):",
