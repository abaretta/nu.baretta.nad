{
	"id": "nu.baretta.nad",
	"name": {
		"en": "NAD D7050"
	},
	"version": "0.0.4",
	"compatibility": "1.x",
	"author": {
		"name": "Anne Baretta",
		"email": "dev@baretta.nu"
	},
	"images": {
		"large": "./assets/images/large.jpg",
		"small": "./assets/images/small.jpg"
	},
	"category": "appliances",
	"description": {
		"en": "NAD D7050 IP control app for Homey",
		"nl": "Dit is een NAD D7050 IP aansturing app voor Homey"
	},
	"dependencies": {
		"net": "*"
	},
	"capabilities": {
        "input_selected": {
            "type": "enum",
            "title": {
                "en": "Selected source",
		"nl": "Geselecteerde bron"
            },
            "getable": true,
            "setable": true,
			"values": [
			{	"id": "0",
				"title": { "en": "Squeezebox"
			}
			},
			{	"id": "1",
				"title": { "en": "Coaxial2"
			}
			},
			{	"id": "2",
				"title": { "en": "DVD"
			}
			},
			{	"id": "3",
				"title": { "en": "TV"
			}
			},
			{	"id": "4",
				"title": { "en": "Computer"
			}
			},
			{	"id": "5",
				"title": { "en": "Spotify"
			}
			},
			{	"id": "6",
				"title": { "en": "USB Dock"
			}
			},
			{	"id": "7",
				"title": { "en": "BT"
			}
			}
			]
        }
},
	"drivers": [{
		"id": "d7050",
		"name": {
			"en": "NAD D7050 amplifier",
			"nl": "NAD D7050 versterker"
		},
		"images": {
			"large": "drivers/d7050/assets/images/large.jpg",
			"small": "drivers/d7050/assets/images/small.jpg"
		},
		"class": "speaker",

		"capabilities": [ "onoff" , "volume_mute", "input_selected", "volume_set" ],
		"mobile": {
			"components": [{
				"id": "icon",
				"capabilities": [ "onoff" ] 
			},{
              
                    		"id": "sensor",
                    		"capabilities": [ "volume_set" ],
                            "capabilitiesOptions": {
                                "volume_set": {
                                    "showTitle": false 
                                }
                            },
				"options": { 
					"icons": {
					"volume_set": "assets/speaker.svg"
					}
				} 
                	},{
              
                    		"id": "slider",
                    		"capabilities": [ "volume_set" ],
				"options": { 
					"showTitle": true 
				} 
                	},{
                    		"id": "picker",
                    		"capabilities": [ "input_selected" ]
                	},{
                    		"id": "toggle",
                    		"capabilities": [ "volume_mute" ],
				"options": { 
					"showTitle": true 
				}
                	}]
		},
		"pair": [{
			"id": "start"
		}, {
			"id": "list_amplifiers",
			"template": "list_devices",
			"navigation": {
				"next": "add_amplifiers"
			}
		}, {
			"id": "add_amplifiers",
			"template": "add_devices"
		}],
		"settings": [{
			"type": "group",
			"label": {
				"en": "General settings",
				"nl": "Algemene instellingen"
			},
			"children": [{
				"id": "settingIPAddress",
				"type": "text",
				"label": {
					"en": "IP address",
					"nl": "IP adres"
				},
				"value": "0.0.0.0"
			},{
				"id": "input0",
				"type": "text",
				"label": {
					"en": "Coaxial1 input",
					"nl": "Coaxial1 input"
				},
				"value": "Coaxial1"
			},{
				"id": "input1",
				"type": "text",
				"label": {
					"en": "Coaxial2 input",
					"nl": "Coaxial2 input"
				},
				"value": "Coaxial2"
			},{
				"id": "input2",
				"type": "text",
				"label": {
					"en": "Optical1 input",
					"nl": "Optical1 input"
				},
				"value": "Optical1"
			},{
				"id": "input3",
				"type": "text",
				"label": {
					"en": "Optical2 input",
					"nl": "Optical2 input"
				},
				"value": "Optical2"
			},{
				"id": "input4",
				"type": "text",
				"label": {
					"en": "Computer input",
					"nl": "Computer input"
				},
				"value": "Computer"
			},{
				"id": "input5",
				"type": "text",
				"label": {
					"en": "Streaming input",
					"nl": "Streaming input"
				},
				"value": "streaming"
			},{
				"id": "input6",
				"type": "text",
				"label": {
					"en": "USB Dock input",
					"nl": "USB Dock input"
				},
				"value": "USB Dock"
			},{
				"id": "input7",
				"type": "text",
				"label": {
					"en": "BT input",
					"nl": "BT input"
				},
				"value": "USB Dock"
			}	
			]
		}]
	}],
	"flow": {
		"conditions": [{
			"id": "volume_mute",
			"title": {
				"en": "D7050 !{{is|is not}} muted",
				"nl": "D7050 mute functie !{{is|is niet}} geactiveerd"
			},
			"args": [{
				"name": "device",
				"type": "device",
				"placeholder": {
					"en": "Select amplifier",
					"nl": "Selecteer versterker"
				},
				"filter": "driver_id=d7050"
			}]
		}, {
			"id": "onoff",
			"title": {
				"en": "D7050 !{{is|is not}} on",
				"nl": "D7050 !{{staat|staat niet}} aan"
			},
			"args": [{
				"name": "device",
				"type": "device",
				"placeholder": {
					"en": "Select amplifier",
					"nl": "Selecteer versterker"
				},
				"filter": "driver_id=d7050"
			}]
		}, {
			"id": "input_selected",
			"title": {
				"en": "Audio source !{{is|is not}}",
				"nl": "Audio bron !{{is|is niet}}"
			},
			"args": [{
				"name": "input",
				"type": "autocomplete",
				"placeholder": {
					"en": "Select source",
					"nl": "Selecteer audio bron"
				}
			}, {
				"name": "device",
				"type": "device",
				"placeholder": {
					"en": "Select amplifier",
					"nl": "Selecteer versterker"
				},
				"filter": "driver_id=d7050"
			}]
		}],
		"actions": [{
			"id": "powerOn",
			"title": {
				"en": "Turn power on",
				"nl": "Zet versterker aan"
			},
			"args": [{
				"name": "device",
				"type": "device",
				"placeholder": {
					"en": "Select amplifier",
					"nl": "Selecteer versterker"
				},
				"filter": "driver_id=d7050"
			}]
		}, {
			"id": "powerOff",
			"title": {
				"en": "Power off/standby",
				"nl": "Uitschakelen/standby"
			},
			"args": [{
				"name": "device",
				"type": "device",
				"placeholder": {
					"en": "Select amplifier",
					"nl": "Selecteer versterker"
				},
				"filter": "driver_id=d7050"
			}]
		}, {
			"id": "changeInput",
			"title": {
				"en": "Select source",
				"nl": "Selecteer audio bron"
			},
			"args": [{
				"name": "input",
				"type": "autocomplete",
				"placeholder": {
					"en": "input",
					"nl": "input"
				}
			}, {
				"name": "device",
				"type": "device",
				"placeholder": {
					"en": "Select amplifier",
					"nl": "Selecteer versterker"
				},
				"filter": "driver_id=d7050"
			}]
		}, {
			"id": "Mute",
			"title": {
				"en": "Enable mute",
				"nl": "Zet mute aan"
			},
			"args": [{
				"name": "device",
				"type": "device",
				"placeholder": {
					"en": "Select amplifier",
					"nl": "Selecteer versterker"
				},
				"filter": "driver_id=d7050"
			}]
		}, {
			"id": "unMute",
			"title": {
				"en": "Turn mute off",
				"nl": "Zet mute uit"
			},
			"args": [{
				"name": "device",
				"type": "device",
				"placeholder": {
					"en": "Select amplifier",
					"nl": "Selecteer versterker"
				},
				"filter": "driver_id=d7050"
			}]
		}, {
			"id": "autoShutOffOn",
			"title": {
				"en": "Enable auto shut off",
				"nl": "Activeer auto shut off"
			},
			"args": [{
				"name": "device",
				"type": "device",
				"placeholder": {
					"en": "Select amplifier",
					"nl": "Selecteer versterker"
				},
				"filter": "driver_id=d7050"
			}]
		}, {
			"id": "autoShutOffOff",
			"title": {
				"en": "Disable auto shut off",
				"nl": "Deactiveer auto shut off"
			},
			"args": [{
				"name": "device",
				"type": "device",
				"placeholder": {
					"en": "Select amplifier",
					"nl": "Selecteer versterker"
				},
				"filter": "driver_id=d7050"
			}]
		}, {
			"id": "powerSaveOn",
			"title": {
				"en": "Enable power save mode",
				"nl": "Activeer de spaarstand"
			},
			"args": [{
				"name": "device",
				"type": "device",
				"placeholder": {
					"en": "Select amplifier",
					"nl": "Selecteer versterker"
				},
				"filter": "driver_id=d7050"
			}]
		}, {
			"id": "powerSaveOff",
			"title": {
				"en": "Disable power save mode",
				"nl": "Deactiveer de spaarstand"
			},
			"args": [{
				"name": "device",
				"type": "device",
				"placeholder": {
					"en": "Select amplifier",
					"nl": "Selecteer versterker"
				},
				"filter": "driver_id=d7050"
			}]
		}, {
			"id": "volumeUp",
			"title": {
				"en": "Increase the volume",
				"nl": "Verhoog het volume"
			},
			"args": [{
				"name": "device",
				"type": "device",
				"placeholder": {
					"en": "Select amplifier",
					"nl": "Selecteer versterker"
				},
				"filter": "driver_id=d7050"
			}, {
				"name": "volume",
				"type": "number",
				"min": 1,
				"max": 50,
				"placeholder": {
					"en": "Volume increase (%)",
					"nl": "Volume toename (%)"
				}
			}]
		}, {
			"id": "volumeDown",
			"title": {
				"en": "Lower the volume",
				"nl": "Verlaag het volume"
			},
			"args": [{
				"name": "device",
				"type": "device",
				"placeholder": {
					"en": "Select amplifier",
					"nl": "Selecteer versterker"
				},
				"filter": "driver_id=d7050"
			}, {
				"name": "volume",
				"type": "number",
				"min": 1,
				"max": 50,
				"placeholder": {
					"en": "Volume decrease (%)",
					"nl": "Volume afname (%)"
				}
			}]
		}, {
			"id": "setVolume",
			"title": {
				"en": "Change volume",
				"nl": "Verander volume"
			},
			"args": [{
				"name": "device",
				"type": "device",
				"placeholder": {
					"en": "Select amplifier",
					"nl": "Selecteer versterker"
				},
				"filter": "driver_id=d7050"
			}, {
				"name": "volume",
				"type": "number",
				"min": 0,
				"max": 99,
				"placeholder": {
					"en": "Target volume",
					"nl": "Gewenst volume"
				}
			}]
		}]
	}
}
